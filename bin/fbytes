#!/usr/bin/env php
<?php
if (!isset($argv[1]) || !is_numeric($argv[1])) {
    die("Please provide number of bytes to format\n");
}

$bytes = ($argv[1]);

$scale = ['KiB', 'MiB', 'GiB', 'TiB'];

$fbytes = '';
foreach ($scale as $size) {
    $bytes = bcdiv($bytes, 1024, 2);
    $fbytes = $bytes . $size;

    if ($bytes < 1024) {
        break;
    }
}

echo $fbytes . PHP_EOL;
