#!/usr/bin/env php
<?php
if (isset($argv[2])) {
    $argv[1] = $argv[1] . ' ' . $argv[2];
} else {
    $argv[1] = $argv[1] . ' 00:00:00';
}
if (! isset($argv[1]) || ! preg_match('/([0-9]{4})\-([0-9]{2})\-([0-9]{2})( ([0-9]{2}):([0-9]{2}):([0-9]{2}))?/', $argv[1], $m))
{
	echo "\nUsage: timestamp.php YYYY-MM-DD [HH:mm:ss]\n\n";
	exit;
}

echo "\nTimestamp of '{$argv[1]}': " . mktime($m[5], $m[6], $m[7], $m[2], $m[3], $m[1]) . "\n\n";
