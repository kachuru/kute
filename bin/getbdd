#!/usr/bin/env bash

if [ -f "composer.phar" ];
then
    /usr/bin/env php composer.phar self-update
else
    /usr/bin/env curl -sS https://getcomposer.org/installer | php
fi

if [ ! -f "composer.json" ];
then
    echo '{
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "": [
                "src"
            ]
        }
    }
}
' > composer.json
fi

/usr/bin/env php composer.phar require --dev behat/behat

/usr/bin/env php composer.phar require --dev phpspec/phpspec
