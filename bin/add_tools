#!/bin/bash
if [ ! -n "$1" ]
then
    echo "Usage ./add_tools <remote_host>"
else
    ssh-copy-id $1
    ssh -A $1 "if [ -e /etc/redhat-release ]; then sudo yum install -y bash-completion xmlstarlet; fi"
    ssh -A $1 "ssh -q -o StrictHostKeyChecking=no git@github.com"
    ssh -A $1 "git clone git@github.com:rgpjones/ps-tools.git ~/tools"
    ssh $1 "~/tools/bin/tools"
fi
