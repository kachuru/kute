{
    "name": "kachuru/kute",
    "description": "A package of handy scripts",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=8.2|>=8.3|>=8.4",
        "ext-libxml": "*",
        "firebase/php-jwt": "^6.4",
        "guzzlehttp/guzzle": "^7.5",
        "kachuru/util": "^1.3",
        "symfony/asset": "^7",
        "symfony/console": "^7",
        "symfony/flex": "^1.21",
        "symfony/framework-bundle": "^7",
        "symfony/translation": "^7",
        "symfony/yaml": "^7",
        "twig/twig": "^3.14"
    },
    "require-dev": {
        "phpcompatibility/php-compatibility": "dev-develop",
        "phpspec/phpspec": "^7.5",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.10",
        "symfony/dotenv": "^7"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "Kachuru\\Kute\\": "src/Kachuru/Kute/",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Kachuru\\": "spec/Kachuru/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "acceptance": [
            "vendor/bin/behat"
        ],
        "spec": [
            "vendor/bin/phpspec run"
        ],
        "sniff": [
            "vendor/bin/phpcs --standard=phpcs.xml src/"
        ],
        "fix": [
            "vendor/bin/phpcbf --standard=phpcs.xml src/"
        ],
        "compatibility": [
            "vendor/bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 8.2- src/",
            "vendor/bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 8.3- src/",
            "vendor/bin/phpcs -s --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility/ --runtime-set testVersion 8.4- src/"
        ],
        "analyse": [
            "vendor/bin/phpstan analyse"
        ],
        "quality": [
            "@sniff",
            "@compatibility",
            "@analyse"
        ],
        "test": [
            "@quality",
            "@spec"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "id": "",
            "allow-contrib": false
        }
    }
}
